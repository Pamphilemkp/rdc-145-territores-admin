<div class="container d-flex flex-column mt-3 custom-margin-form">
    <div class="d-flex justify-content-end gap-2" style="margin-right:20px;">
       <%= link_to  edit_sponsor_path(@sponsor) , class: "btn btn-secondary custom-button btn-pencil btn-icon-text" do %>
        <i class="fas fa-pencil-alt fa-icon" data-text="Edit Sponsor" ></i> 
      <% end %> |
       <%= link_to sponsors_path, class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-arrow-left fa-icon" data-text="Go Back"></i> 
      <% end %>
    </div>
    <div>
       <%= render @sponsor %>
    </div>
    <div>
       <%= button_to @sponsor, method: :delete, class: "btn btn-danger custom-button mt-4 float-end btn-icon-text ",style:"margin-right:20px;" do %>
        <i class="fas fa-trash-alt fa-icon"  data-text="Delete"></i> 
      <% end %>
    </div>

</div>

