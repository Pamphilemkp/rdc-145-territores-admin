<div class="d-flex justify-content-center login-margin" style="height: 100vh; ">
  <section class="Form my-4 mx-md-5 mx-3 ">
      <div class="container">
        <div class="row no-gutters custom-coulmn" style="width:100%; height:100%;">
          <div class="col-lg-4 login-img-div p-0">
            <%= image_tag 'okapirare.jpg', class: "img-fluid login-img" %>
          </div>
          <div class="col-lg-7 login-text-div px-md-5  px-2 pt-3" >
            <%= image_tag 'OKAPIRARES.jpg', class: "img-thumbnail rounded-circle py-3", style: "max-height: 100%; max-width: 50%;"%>
            <h4 class="custom-font pt-2">Sign into your Account</h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
                <div class="form-row">
                  <div class="col-lg-7 "  style="width:100%;">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter Email",class:"form-control my-3 custom-font" %>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7 "  style="width:100%;">
                    <%= f.password_field :password, autocomplete: "current-password", placeholder:"******",class:"form-control my-3 custom-font"%>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7" style="width:100%;">
                    <%= f.submit "Log in",class:"btn1 mt-3 mb-2 custom-font"%>
                  </div>
                </div>
                <% if devise_mapping.rememberable? %>
                  <div class="col-lg-7  mb-3" style="width:100%;">
                      <%= f.check_box :remember_me, class: "form-check-input" %>
                      <%= f.label :remember_me, class: "form-check-label custom-font" %>
                  </div>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
</div>

