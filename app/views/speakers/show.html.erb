<div class="container d-flex flex-column mt-3 custom-margin-form">
    <div class="d-flex justify-content-end gap-2" style="margin-right:20px;">
      <%= link_to  edit_speaker_path(@speaker) , class: "btn btn-secondary custom-button btn-pencil btn-icon-text" do %>
        <i class="fas fa-pencil-alt fa-icon" data-text="Edit speaker"></i> 
         <span class="d-md-none">Edit speaker</span> 
      <% end %> |
      <%= link_to speakers_path, class: "btn btn-secondary custom-button btn-icon-text" do %>
          <i class="fas fa-arrow-left fa-icon" data-text="Go Back"></i> 
           <span class="d-md-none">Back To speakers</span> 
      <% end %>
    </div>
    <div>
       <%= render @speaker %>
    </div>
   
</div>

 <div>
      <%= button_to  @speaker, method: :delete, class: "btn btn-danger custom-button mt-4 float-end btn-icon-text ",style:"margin-right:20px;" do %>
        <i class="fas fa-trash-alt fa-icon"  data-text="Delete"></i> 
         <span class="d-md-none">Delete</span> 
      <% end %>
</div>