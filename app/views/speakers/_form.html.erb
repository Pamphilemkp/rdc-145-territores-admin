<style>
  .form-control {
    font-family: 'ubuntu', sans-serif;
  }

  .form-label{
    font-family: 'ubuntu', sans-serif;
    font-weight: bold; 
  }
  h1{
    font-family: 'ubuntu', sans-serif;
    font-weight: bold; 
  }

</style>

<div class="container my-2">
    <%= form_with(model: speaker) do |form| %>
  <% if speaker.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(speaker.errors.count, "error") %> prohibited this speaker from being saved:</h2>

      <ul>
        <% speaker.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, class: "form-label"%>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :presentation, class: "form-label" %>
    <%= form.text_field :presentation, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label"%>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :citizenship, class: "form-label" %>
    <%= form.text_field :citizenship, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :biography, class: "form-label" %>
    <%= form.text_area :biography, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :occupation, class: "form-label"%>
    <%= form.text_field :occupation, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :feedback, class: "form-label" %>
    <%= form.text_area :feedback, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :hear_about_us, class: "form-label" %>
    <%= form.text_field :hear_about_us, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :photo, class: "form-label" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <div class="mt-3 submit-font">
    <%= form.submit "Save", class: "btn btn-secondary float-end"  %>
  </div>
<% end %>
</div>
