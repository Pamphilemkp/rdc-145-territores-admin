  <div class="mb-3">
    <%= form.label :proffessional_experience, class: "form-label" %>
    <%= form.text_field :proffessional_experience, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :summary_of_project, class: "form-label" %>
    <%= form.text_area :summary_of_project, class: "form-control" %>
