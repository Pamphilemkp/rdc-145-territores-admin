<div class="container d-flex flex-column gap-2 custom-margin-form">
  <div >
    <h1>Edit Participant</h1>
  </div>
  <div class="d-flex justify-content-end gap-2"  style="margin-right:20px;">
    <%= link_to @participant , class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-eye fa-icon" data-text="Show Participant "></i> 
         <span class="d-md-none">Show This Participant</span>
      <% end %>   |
      <%= link_to participants_path, class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-arrow-left fa-icon" data-text="Go Back"></i> 
        <span class="d-md-none">Back To Participant</span>
      <% end %>
   </div>
<div>
<%= render "form", participant: @participant %>
</div>
</div>



