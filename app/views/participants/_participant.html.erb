<style>
    /* Custom CSS for table and table cells */
    .custom-table {
        width: 100%;
    }

    .custom-table th, .custom-table td {
        white-space: nowrap;
    }

    .sponsor-head {
        margin-top: 10px;
        color: #333;
    }

    /* Add responsive styles for smaller screens */
    @media (max-width: 767px) {
        .custom-table th,
        .custom-table td {
            width: auto; /* Allow content to expand */
            text-align: left; /* Align content to the left */
            border-bottom: 1px solid #eee;
            padding: 5px;
            overflow: hidden; /* Add overflow hidden for mobile screens */
            display: block; /* Display table cells as block elements */
        }

        /* Display labels generated from data-label attribute */
        .custom-table td::before {
            content: attr(data-label);
            font-weight: bold;
            display: block;
        }

        /* Add specific style for the address field */
        .custom-table td.address {
            white-space: nowrap;
            text-overflow: ellipsis; /* Add ellipsis for overflowing text */
            overflow: hidden;
        }
        
        /* Adjust container padding to prevent horizontal overflow */
      
    }
</style>
<div class="container ">
    <h1 class="sponsor-head custom-font">Participant Information</h1>
    <div class="table-responsive overflow-x-hidden">
        <table class="table table-striped table-bordered table-sm mt-4 custom-table">
            <tbody>
                <tr>
                     <td class="custom-font">First name:</td>
                    <td ><%= participant.first_name  %></td>
                </tr>
                <tr>
                   <td class="custom-font">Last name:</td>
                    <td ><%= participant.last_name %></td>
                </tr>
                <tr>
                    <td class="custom-font ">Address:</td>
                    <td class="text-wrap"><%=  participant.address %></td>
                </tr>
                <tr>
                  <td class="custom-font address">Proffession:</td>
                    <td class="address text-wrap"><%= participant.proffession %></td>
                </tr>
                <tr>
                  <td class="custom-font">Sector of investment:</td>
                  <td class="address text-wrap"><%= participant.investment_idea %></td>
                </tr>
                <tr>
                <td class="custom-font">Impact of idea:</td>
                    <td class="address text-wrap"><%= participant.impact_of_idea %></td>
                </tr>
                <tr>
                  <td class="custom-font">Sector of investment:</td>
                  <td class="address text-wrap"><%=participant.sector_of_investment%></td>
                </tr>
                <tr>
                  <td class="custom-font">Proffessional experience:</td>
                  <td class="address text-wrap"><%=   participant.proffessional_experience  %></td>
                </tr>
                <tr>
                  <td class="custom-font">Summary of project:</td>
                  <td class="address text-wrap"><%= participant.summary_of_project  %></td>
                </tr>
                <tr>
                  <td class="custom-font">Province of interest:</td>
                  <td class="address text-wrap"><%= participant.province_of_interest %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>