<style>
    /* Custom CSS for table and table cells */
    .custom-table {
        width: 100%; /* Set the width of the table as needed */
    }

    .custom-table th, .custom-table td {
        width: 100px; /* Set the width of the table cells as needed */
        height: 10px; /* Set the height of the table cells as needed */
        overflow: hidden; /* Hide overflowing text */
        white-space: nowrap;
        font-family: 'ubuntu', sans-serif;
    }

    .sponsor-head {
    margin-left: 20px;
    margin-top:4px;
    color: #333; 
   
  }
  .custom-button{
    font-size: 16px; 
    font-weight: bold; 
    color: white;
    font-family: 'ubuntu', sans-serif;
  }


</style>
<div class="container">
 <div id="<%= dom_id participant %>">
  <div class="table-responsive">
    <table class="table table-striped table-bordered custom-table mt-4">
  <thead class="table-dark">
    <tr>
      <th scope="col">First name:</th>
      <th scope="col">Last name:</th>
      <th scope="col">Address:</th>
      <th scope="col">Proffession:</th>
      <th scope="col">Investment idea:</th>
      <th scope="col">Impact of idea:</th>
      <th scope="col">Sector of investment:</th>
      <th scope="col">Proffessional experience:</th>
      <th scope="col">Summary of project:</th>
      <th scope="col">Province of interest:</th>
      <th scope="col">Show Participant</th>
      
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="text-center"> <%= participant.first_name %></td>
      <td class="text-center"><%=participant.last_name %></td>
      <td class="text-center"><%= participant.address %></td>
      <td class="text-center"> <%= participant.proffession %></td>
      <td class="text-center"><%= participant.investment_idea %></td>
      <td class="text-center"> <%= participant.impact_of_idea %></td>
      <td class="text-center"><%= participant.sector_of_investment %> </td>
      <td class="text-center"> <%= participant.proffessional_experience %> </td>
      <td class="text-center"> <%= participant.summary_of_project %> </td>
      <td class="text-center"> <%= participant.province_of_interest %> </td>
      <td class="text-center"> <%= link_to "Show this participant", participant , class: "btn btn-sm btn-primary custom-button"%>
    </td>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>