
<style>
    .custom-table {
        width: 100%; 
    }

    .custom-table th, .custom-table td {
        width: 100px;
        height: 10px; 
        overflow: hidden; 
        white-space: nowrap;
        font-family: 'ubuntu', sans-serif;
    }

    .sponsor-head {
    margin-left: 20px;
     margin-top:4rem;
    color: #333; 
   
  }
  .custom-button{
    font-size: 16px; 
    font-weight: bold; 
    color: white;
    font-family: 'ubuntu', sans-serif;
  }


</style>
<div class="container ">
        <div class="d-flex flex-column gap-2">
          <div class="d-flex flex-column gap-5">
              <div >
                  <h1 class="sponsor-head position-absolute top-0 " >Participants</h1>
              </div>
              <div class="d-flex justify-content-end ">
                  <%= link_to new_participant_path, class: "btn btn-secondary custom-button" do %>
                      <i class="fa-solid fa-user-plus" style="font-size: 1.5rem; color: white;"></i> 
                  <% end %>
              </div>
          </div>
    </div>
</div>
<div id="participants">
   <div class="container overflow-x-hidden">
     <div id="<%=  @participants %>">
        <div class="table-responsive">
          <table class="table table-striped table-bordered custom-table mt-4">
             <thead class="table-dark">
               <tr>
                  <th scope="col" class="text-center">ID:</th>
                  <th scope="col">First name:</th>
                  <th scope="col">Last name:</th>
                  <th scope="col">Province of interest:</th>
                </tr>
              </thead>
              <tbody>
                <% @participants.each_with_index do |participant,index|%>
                  <tr class="contianer" onclick="window.location='<%= participant_path(participant) %>'" style="cursor: pointer;">
                   
                    <td class="text-center text-primary custom-font" style="text-decoration: underline;"> <%=index + 1%></td>
                    
                    <td class="text-center"> <%= participant.first_name %></td>
                    
                    <td class="text-center"><%=participant.last_name %></td>
                    
                    <td class="text-center"> 
                            <% participant.province_of_interest.each do |item| %>
                            # -  <%=item.values[0]  %> <br /> 
                            <% end %>
                    </td>
                  </tr>
                <%end%>
              </tbody>
             </table>
           </div>
       </div>
    </div>
</div>





