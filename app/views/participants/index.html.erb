
<style>
    /* Custom CSS for table and table cells */
    .custom-table {
        width: 100%; /* Set the width of the table as needed */
    }

    .custom-table th, .custom-table td {
        width: 100px; /* Set the width of the table cells as needed */
        height: 10px; /* Set the height of the table cells as needed */
        overflow: hidden; /* Hide overflowing text */
        white-space: nowrap;
        font-family: 'ubuntu', sans-serif;
    }

    .sponsor-head {
    margin-left: 20px;
    margin-top:4px;
    color: #333; 
   
  }
  .custom-button{
    font-size: 16px; 
    font-weight: bold; 
    color: white;
    font-family: 'ubuntu', sans-serif;
  }


</style>
<div class="container ">
  <div class="d-flex flex-column gap-2">
  <div class="d-flex flex-column gap-5">
      <div >
        <h1 class="sponsor-head position-absolute top-0 mt-5 " >Participants</h1>
    </div>
    <div class="d-flex justify-content-end mt-5">
      <%= link_to "New participant", new_participant_path , class: "btn btn-secondary custom-button"%>
    </div>
  </div>
 </div>

</div>
<div id="participants">
  <div class="container overflow-x-hidden">
 <div id="<%=  @participants %>">
  <div class="table-responsive">
    <table class="table table-striped table-bordered custom-table mt-4">
  <thead class="table-dark">
    <tr>
      
      <th scope="col" class="text-center">ID:</th>
      <th scope="col">First name:</th>
      <th scope="col">Last name:</th>
      <th scope="col">Province of interest:</th>
      <th scope="col">Voir Participant</th>
      
      
    </tr>
  </thead>
  <tbody>
  <% @participants.each_with_index do |participant,index|%>
    <tr>
        <td class="text-center "> <%=index + 1%></td>
        <td class="text-center"> <%= participant.first_name %></td>
        <td class="text-center"><%=participant.last_name %></td>
        <td class="text-center"> <%= participant.province_of_interest %> </td>
         <td class="text-center"> <%= link_to "Voir plus sur #{participant.first_name}", participant , class: "btn btn-sm btn-primary custom-button"%></td>
    </tr>
  <%end%>
  </tbody>
</table>
</div>
</div>
</div>
</div>





