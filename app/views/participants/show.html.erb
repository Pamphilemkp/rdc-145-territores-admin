<div class="container d-flex flex-column mt-3 custom-margin-form">
    <div class="d-flex justify-content-end gap-2 " style="margin-right:20px;">
      <%= link_to  edit_participant_path(@participant), class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-pencil-alt fa-icon"  data-text="Edit Participant"></i> 
        <span class="d-md-none">Edit This Participant</span>
      <% end %> |
      <%= link_to participants_path, class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-arrow-left fa-icon" data-text="Go Back"></i> 
         <span class="d-md-none">Back To Participant</span>
      <% end %>
    </div>
    <div>
       <%= render @participant %>
    </div>
    <div>
       <%= button_to @participant, method: :delete, class: "btn btn-danger custom-button mt-4 float-end btn-icon-text ",style:"margin-right:20px;" do %>
        <i class="fas fa-trash-alt fa-icon"  data-text="Delete"></i> 
        <span class="d-md-none">Destroy Participant</span>
      <% end %>
    </div>

</div>