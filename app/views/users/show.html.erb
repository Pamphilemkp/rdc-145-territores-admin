<p style="color: green"><%= notice %></p>
<div class="container d-flex flex-column custom-margin-form">
    <div class="d-flex justify-content-end gap-1">
      <%= link_to "Edit this user", edit_user_path(@user) ,class: "btn btn-secondary custom-button"%> |
     <%= link_to "Back to users", users_path  ,class: "btn btn-secondary custom-button"%>
    </div>

       <div>
        <%= form_tag(create_login_user_path(@user), method: :post) do %>
             
            <%= submit_tag "Create a login for #{@user.first_name}", class: 'btn btn-success', data: { turbo_confirm: 'Are you sure you want to create a login for this user?' }  %>
        <% end %>
   </div>
    <div>
       <%= render @user %>
    </div>
</div>

 <div>
     <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-danger custom-button  float-end"%>
</div>