<div class="container d-flex flex-column mt-3 custom-margin-form">
    <div class="d-flex justify-content-end gap-2" style="margin-right:20px;">
      <%= link_to  edit_user_path(@user) , data: { turbo_method: :edit ,turbo_confirm: 'Are you sure to edit this User?' }, class: "btn btn-secondary custom-button btn-pencil btn-icon-text" do %>
        <i class="fas fa-pencil-alt fa-icon" data-text="Edit User"></i> 
         <span class="d-md-none">Edit This User</span> 
      <% end %> |
      <%= link_to users_path, class: "btn btn-secondary custom-button btn-icon-text" do %>
          <i class="fas fa-arrow-left fa-icon" data-text="Go Back"></i> 
           <span class="d-md-none">Back To Users</span> 
      <% end %>
    </div>
    <div>
       <%= render @user %>
    </div>
   
</div>
 <div>
      <%= button_to  @user, method: :delete, form:{ data: { turbo_confirm: 'Are you sure delete this User?' } },class: "btn btn-danger custom-button mt-4 float-end btn-icon-text ",style:"margin-right:20px;" do %>
        <i class="fas fa-trash-alt fa-icon"  data-text="Delete"></i> 
         <span class="d-md-none">Delete</span> 
      <% end %>
</div>