
<div class="container d-flex flex-column gap-2 custom-margin-form">
    <div >
      <h1>Editing user</h1>
    </div>
    <div class="d-flex justify-content-end gap-2" style="margin-right:20px;">
      <%= link_to @user, class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-eye fa-icon" data-text="Show User "></i> 
         <span class="d-md-none">Show This User</span> 
      <% end %>   |
      <%= link_to users_path, class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-arrow-left fa-icon" data-text="Go Back"></i>
         <span class="d-md-none">Back To User</span>  
      <% end %>
    </div>
<div>
  <%= render "form", user: @user %>
</div>
</div>
