

<style>
    /* Custom CSS for table and table cells */
    .custom-table {
        width: 100%; /* Set the width of the table as needed */
    }

    .custom-table th, .custom-table td {
        width: 100px; /* Set the width of the table cells as needed */
        height: 10px; /* Set the height of the table cells as needed */
        overflow: hidden; /* Hide overflowing text */
        white-space: nowrap;
        font-family: 'ubuntu', sans-serif;
    }

    .sponsor-head {
    margin-left: 20px;
    margin-top:4px;
    color: #333; 
   
  }
  .custom-button{
    font-size: 16px; 
    font-weight: bold; 
    color: white;
    font-family: 'ubuntu', sans-serif;
  }


</style>
<div class="container">
<div class="d-flex flex-column gap-2 ">
  <div  class="d-flex flex-column gap-5">
   <div >
    <h1 class="sponsor-head position-absolute top-0 mt-5  " >Users</h1>
   </div>
   <div class="d-flex justify-content-end mt-5">
    <%= link_to "New user", new_user_path  , class: "btn btn-secondary custom-button"%>
  </div>
  </div>
<div id="users">

<div class="container">
<div id="<%=  @users %>">
  <div class="table-responsive">
    <table class="table table-striped table-bordered custom-table mt-4">
  <thead class="table-dark">
    <tr>
      <th scope="col">First name:</th>
      <th scope="col">Last name:</th>
      <th scope="col">Photo:</th>
      <th scope="col">Address:</th>
      <th scope="col">Phone:</th>
      <th scope="col">Show User:</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user|%>
    <tr>
      <td class="text-center"><%= user.first_name %></td>
      <td class="text-center"><%= user.last_name %></td>
      <td class="text-center">
      <% if user.photo? %>
        <%= image_tag user.photo_url, class: "img-thumbnail rounded-circle", style: "max-height: 50px; max-width: 50px;" %>
      <% end %>
    </td>
      <td class="text-center"><%= user.address %></td>
      <td class="text-center"><%= user.phone %></td>
      <td class="text-center"> <%= link_to "Show this user", user, class: "btn btn-sm btn-primary custom-button" %></td>
    </tr>
  <%end%>
  </tbody>
</table>
</div>
</div>
</div>
</div>
</div>
</div>
