<style>
  .form-control {
    font-family: 'ubuntu', sans-serif;
  }

  .form-label{
    font-family: 'ubuntu', sans-serif;
    font-weight: bold; 
  }
  h1{
    font-family: 'ubuntu', sans-serif;
    font-weight: bold; 
  }

</style>
<div class="container my-2">
<%= form_with(model: ambassador, class: "my-4") do |form| %>
  <% if ambassador.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(ambassador.errors.count, "error") %> prohibited this ambassador from being saved:</h2>
      <ul>
        <% ambassador.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="mt-1">
  <div class="mb-3">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :citizenship, class: "form-label" %>
    <%= form.text_field :citizenship, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :presentation, class: "form-label" %>
    <%= form.text_field :presentation, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :position, class: "form-label" %>
    <%= form.text_field :position, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :comment, class: "form-label" %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :reason_of_choice, class: "form-label" %>
    <%= form.text_field :reason_of_choice, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :territoire, class: "form-label" %>
    <%= form.text_field :territoire, class: "form-control" %>
  </div>

  <div class="mt-3 submit-font">
    <%= form.submit "Submit", class: "btn btn-secondary float-end" %>
  </div>
</div>
<% end %>
</div>