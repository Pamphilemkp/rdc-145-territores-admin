<div class="container d-flex flex-column mt-3 custom-margin-form">
    <div class="d-flex justify-content-end gap-2 " style="margin-right:20px;">
      <%= link_to edit_ambassador_path(@ambassador), data: {turbo_method: :edit, turbo_confirm: 'Are you sure to edit this Ambassador?' } ,class: "btn btn-secondary custom-button btn-icon-text" do %>
       <i class="fas fa-pencil-alt fa-icon" data-text="Edit Ambassador"></i>
       <span class="d-md-none">Edit This Ambassador</span>
      <% end %> |
      <%= link_to ambassadors_path, class: "btn btn-secondary custom-button btn-icon-text" do %>
        <i class="fas fa-arrow-left fa-icon" data-text="Go Back"></i> 
        <span class="d-md-none">Back To Ambassadors</span>
      <% end %>
    </div>
    <div>
    <%= render @ambassador %>
    </div>
    <div>
     
     
     <% unless @ambassador.acceptance %>
           
          <%= form_tag(accept_application_ambassador_path(@ambassador), method: :post) do %>
            <%= submit_tag 'Accepter comme ambassadeur', class: 'btn btn-success', data: { turbo_confirm: 'Are you sure you want to accept this user?' }  %>
          <% end %>
     <% end %>


     <%= button_to @ambassador,method: :delete, class: "btn btn-danger custom-button mt-4 float-end btn-icon-text",form:{ data: { turbo_confirm: 'Are you sure delete this Ambassador?' } }, style: "margin-right:20px;" do %>

        <i class="fas fa-trash-alt fa-icon"  data-text="Delete "></i> 
        <span class="d-md-none">Destroy This Ambassador</span>
      <% end %>
    </div>

</div>